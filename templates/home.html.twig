{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12">
                <h1>Nouveautés</h1>
            </div>

            {% for performance in performances %}
                <div class="col-xs-12 col-md-4 mb-4">
                    <a href="{{ path('one_performance', {'performance': performance.id}) }}">
                        <div class="card">
                            <img src="/upload/{{ performance.imageName }}" alt="vignette" class="card-img-top">
                            <div class="card-body">
                                <p class="card-text">{{ performance.name }}</p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
        <div class="row justify-content-center">
            <div class="col-xs-12 col-md-9">
                <div class="card">
                    <div class="card-header card-title">
                        <p>Prochaine date de tournée</p>
                    </div>
                    <div class="card-body">

                        <p class="card-text">Le {{ next_tour[0].date|date('d/m/Y à G:i') }}
                            à {{ next_tour[0].city }}</p>

                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}
