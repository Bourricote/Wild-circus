{% extends 'base.html.twig' %}

{% block title %}Performance{% endblock %}

{% block body %}
    <h1>Performance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ performance.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ performance.name }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ performance.Text }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ performance.createdAt ? performance.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ performance.updatedAt ? performance.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ performance.imageName }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('performance_index') }}">back to list</a>

    <a href="{{ path('performance_edit', {'id': performance.id}) }}">edit</a>

    {{ include('performance/_delete_form.html.twig') }}
{% endblock %}
