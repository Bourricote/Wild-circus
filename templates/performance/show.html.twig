{% extends 'base.html.twig' %}

{% block title %}Performance{% endblock %}

{% block body %}
    <div class="container">
        <h1>Performance</h1>

        <table class="table">
            <tbody>

            <tr>
                <th>Nom</th>
                <td>{{ performance.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ performance.text|raw|nl2br }}</td>
            </tr>
            <tr>
                <th>Créé le</th>
                <td>{{ performance.createdAt ? performance.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="/upload/{{ performance.imageName }}" alt="vignette" class="vignette"></td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('performance_index') }}">Retour</a>

        <a href="{{ path('performance_edit', {'id': performance.id}) }}">Modifier </a>

        {{ include('performance/_delete_form.html.twig') }}
    </div>
{% endblock %}
