{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-12">
                <h1>Réserver des places</h1>
            </div>
        </div>
        <div class="row mb-5">
            <div class="col-12 mb-5">
                <h3>{{ tour.city }} {{ tour.date ? tour.date|date('d/m/Y à G:i') : '' }}</h3>
                <h3>Prix d'une place : <span id="price">{{ tour.price }}</span>€ </h3>
            </div>
            <div class="col-6">
                {{ form_start(form) }}
                {{ form_widget(form) }}

                <h4> Prix total : <span id="total-price"></span>€ (à régler sur place)</h4>
                <button class="btn btn-primary my-3">Réserver</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('ticketsPrice') }}
{% endblock %}
