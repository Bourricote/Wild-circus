{% extends 'base.html.twig' %}

{% block title %}Dates{% endblock %}

{% block body %}
    <div class="container">
    <h1>Dates de tournée</h1>
        <a href="{{ path('tour_new') }}" class="btn btn-primary my-3">Ajouter</a>

    <table class="table admin-table">
        <thead>
            <tr>
                <th>Ville</th>
                <th>Date</th>
                <th>Prix</th>
                <th class="text-center">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tour in tours %}
            <tr>
                <td>{{ tour.city }}</td>
                <td>{{ tour.date ? tour.date|date('d/m/Y à G:i') : '' }}</td>
                <td>{{ tour.price }}€ </td>
                <td class="text-center">
                    <a href="{{ path('tour_show', {'id': tour.id}) }}"><i class="fas fa-search-plus mr-2"></i></a>
                    <a href="{{ path('tour_edit', {'id': tour.id}) }}"><i class="fas fa-pencil-alt"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
