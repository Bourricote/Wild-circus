{% extends 'base.html.twig' %}

{% block title %}Tour{% endblock %}

{% block body %}
    <div class="container">
    <h1>Tour</h1>

    <table class="table admin-table">
        <tbody>
            <tr>
                <th>Ville</th>
                <td>{{ tour.city }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ tour.date ? tour.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ tour.price }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tour_index') }}" class="btn btn-primary my-3">Retour</a>

    <a href="{{ path('tour_edit', {'id': tour.id}) }}" class="btn btn-primary my-3">Modifier</a>

    {{ include('tour/_delete_form.html.twig') }}
    </div>
{% endblock %}
