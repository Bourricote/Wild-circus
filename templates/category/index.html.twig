{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
    <div class="container">
        <h1>Toutes les catégories de numéros</h1>

        <a href="{{ path('category_new') }}" class="btn btn-primary my-3">Ajouter</a>

        <table class="table admin-table">
            <thead>
            <tr>
                <th>Nom</th>
                <th class="text-center">actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td class="text-center">
                        <a href="{{ path('category_show', {'id': category.id}) }}"><i class="fas fa-search-plus mr-2"></i></a>
                        <a href="{{ path('category_edit', {'id': category.id}) }}"> <i class="fas fa-pencil-alt"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
