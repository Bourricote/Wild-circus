{% extends 'base.html.twig' %}

{% block title %}Catégorie{% endblock %}

{% block body %}
    <div class="container">
        <h1>Catégorie</h1>

        <table class="table admin-table">
            <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Identifier</th>
                <td>{{ category.identifier }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('category_index') }}" class="btn btn-primary my-3">Retour</a>

        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-primary my-3">Modifier</a>

        {{ include('category/_delete_form.html.twig') }}
    </div>
{% endblock %}
